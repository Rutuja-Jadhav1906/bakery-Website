<% layout("/layouts/boilerplate") %> <%- include("../includes/flash.ejs") %>
<body>
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3 cards-body">
    <% for(let cake of allCakes){%>
    <a href="/cakes/<%=cake._id %>" class="cards-link">
      <div class="card col item-card">
        <div class="card-image-wrapper">
          <img
            src="<%= cake.image.url %>"
            class="card-img-top"
            alt="cake_image"
          />
          <div class="card-overlay">
            <h5 class="overlay-text"><%= cake.name %></h5>
            <p class="overlay-price">&#8377; <%= cake.price %></p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
