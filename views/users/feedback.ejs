<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">Feedback</h1>
    <div class="col-6 offset-3">
        <form action="/feedback" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input name="name" id="name" type="text" class="form-control" required>
                <div class="valid-feedback">Looks Good!</div>
            </div>
            <div class="mb-3">
                <label for="mobile" class="form-label">Mobile No.</label>
                <input name="mobile" id="mobile" type="tel" class="form-control" maxlength="10" required>
                <!-- <div class="valid-feedback">Looks Good!</div> -->
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" class="form-control" required>
                <!-- <div class="valid-feedback">Looks Good!</div> -->
            </div>

            <div class="mb-3">
                <label for="product" class="form-label">Product Names</label>
                <textarea name="feedback[product]" id="product" cols="30" rows="5" class="form-control" required></textarea>
                <!-- <div class="valid-feedback">Looks Good!</div> -->
            </div>

            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-basic">
                  
                  <!-- <legend>First rating:</legend> -->
                  <input type="radio" id="no-rate" class="input-no-rate" name="feedback[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="feedback[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="feedback[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="feedback[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="feedback[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="feedback[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>

            <div class="mb-3">
              <label for="expreience" class="form-label">Expreience</label>
              <textarea name="feedback[comment]" id="comment" cols="30" rows="5" class="form-control"></textarea>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
</div>